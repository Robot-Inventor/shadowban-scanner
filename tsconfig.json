{
  "extends": "@robot-inventor/tsconfig-base/bundler.json",
  "compilerOptions": {
    "declaration": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "isolatedModules": true,
    "rootDir": ".",
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ]
  },
  "include": [
    "./rspack.config.ts",
    "./src/**/*.ts",
    "./script/**/*.ts"
  ]
}